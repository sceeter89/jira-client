<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pivot="http://schemas.telerik.com/2008/xaml/presentation/pivot"
             xmlns:local="clr-namespace:Yakuza.JiraClient.Plugins.Analysis.Analysis"
             x:Class="Yakuza.JiraClient.Plugins.Analysis.Analysis.PivotReportingGrid"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance d:Type={x:Type local:PivotGridViewModel}}">
   <Grid>
      <pivot:RadPivotGrid DataProvider="{Binding DataSource}"/>
   </Grid>
</UserControl>
