<UserControl x:Class="JiraAssistant.Controls.ScrumCardsPrintPreviewPageIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JiraAssistant.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50">
   <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
      <TextBlock Text="Page: "/>
      <TextBlock Text="{Binding RightPageIndex}"/>
      <TextBlock Text=" / "/>
      <TextBlock Text="{Binding Pages.Count}"/>
      <TextBlock Text=" Total cards: "/>
      <TextBlock Text="{Binding AllCardsCount}"/>
   </StackPanel>
</UserControl>
