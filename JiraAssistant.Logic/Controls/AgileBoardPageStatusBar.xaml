<UserControl x:Class="JiraAssistant.Logic.Controls.AgileBoardPageStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JiraAssistant.Logic.Controls"
             xmlns:converters="clr-namespace:JiraAssistant.Logic.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="450">
   <UserControl.Resources>
      <converters:BoolToIconConverter x:Key="BoolToIcon"
                                      TrueIcon="/Assets/Icons/CompletedIcon.png"
                                      FalseIcon="/Assets/Icons/LoadingIcon.png"/>
   </UserControl.Resources>
   <StackPanel Orientation="Horizontal" Grid.Row="1">
      <TextBlock Text="Downloading " VerticalAlignment="Center"/>
      <Image Source ="{Binding DownloadCompleted, Converter={StaticResource BoolToIcon}}" Width="16" Height="16" Margin="5" />
   </StackPanel>
</UserControl>
