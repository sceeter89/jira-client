<UserControl x:Class="JiraAssistant.Logic.Controls.BurnDownChartStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JiraAssistant.Logic.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
      <StackPanel>
         <TextBlock Text="Burn down indicator:" Margin="5"/>
         <ComboBox ItemsSource="{Binding AvailableIndicators}" SelectedItem="{Binding SelectedIndicator}" DisplayMemberPath="Name"
                   Margin="5" Width="200" HorizontalAlignment="Left"/>
      </StackPanel>
   </Grid>
</UserControl>
